<h1>Restaurants</h1>

<% @restaurants.each do |r| %>
<h3>name: <%= link_to r.name, restaurant_path(r) %></h3>
<h5>address: <%=r.address%></h5>
<h5>category: <%=r.category%></h5>
<h5><%= 'phone number: ' if r.phone_number? %><%=r.phone_number%></h5>
<% end %>

<%= link_to 'New Restaurant', new_restaurant_path %>
